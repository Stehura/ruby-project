<div class="card-header d-flex justify-content-between">
        <div class="d-flex align-items-end">
            <h4>
                Author: <span class="text-primary"><%= @post.user.username %></span> 
            </h4>
        </div>
        <div class="d-flex flex-column">
            <h6 class="my-1 text-secondary text-right">
                <%= @post.created_at %>
            </h6>
            <% if @post.created_at != @post.updated_at %>
                <p class="text-secondary text-right m-0">
                    <small>
                        Updated at: <%= @post.updated_at %>
                    </small>
                </p>
                
            <% end %>
        </div>
    </div>
    <div class="card-header">
        <h4>
            Title: <span class="text-info"><%= @post.title %></span> 
        </h4>
    </div>
    <div class="card-header">
        <h4>
            Category: <span class="text-info"><%= @post.category %></span> 
        </h4>
    </div>
    <div class="card-body">
        <p><%= @post.text %></p>
    </div>